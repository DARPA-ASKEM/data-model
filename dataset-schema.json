{
    "title": "DatasetDocument",
    "type": "object",
    "properties": {
        "id": {
            "title": "Id",
            "description": "Universally unique identifier for the dataset",
            "type": "string",
            "format": "uuid4"
        },
        "name": {
            "title": "Name",
            "description": "Display/human name for the dataset",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "(Optional) Texual description of the dataset",
            "type": "string"
        },
        "data_url": {
            "title": "Data Url",
            "description": "(Optional) Url from which the dataset can be downloaded/fetched",
            "minLength": 1,
            "maxLength": 65536,
            "format": "uri",
            "type": "string"
        },
        "columns": {
            "title": "Columns",
            "description": "Information regarding the columns that make up the dataset",
            "type": "array",
            "items": {
                "$ref": "#/definitions/DatasetColumn"
            }
        },
        "metadata": {
            "title": "Metadata",
            "description": "(Optional) Unformatted metadata about the dataset",
            "type": "object"
        },
        "source": {
            "title": "Source",
            "description": "(Optional) Source of dataset",
            "type": "string"
        },
        "grounding": {
            "title": "Grounding",
            "description": "(Optional) Grounding of ontological concepts related to the dataset as a whole",
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/Grounding"
            }
        }
    },
    "required": [
        "id",
        "name",
        "columns"
    ],
    "definitions": {
        "ColumnTypes": {
            "title": "ColumnTypes",
            "description": "An enumeration.",
            "enum": [
                "unknown",
                "boolean",
                "string",
                "char",
                "integer",
                "int",
                "float",
                "double",
                "timestamp",
                "datetime",
                "date",
                "time"
            ],
            "type": "string"
        },
        "Grounding": {
            "title": "Grounding",
            "type": "object",
            "properties": {
                "identifiers": {
                    "title": "Identifiers",
                    "description": "Ontological identifier per DKG",
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "context": {
                    "title": "Context",
                    "description": "(Optional) Additional context that informs the grounding",
                    "type": "object"
                }
            },
            "required": [
                "identifiers"
            ]
        },
        "DatasetColumn": {
            "title": "DatasetColumn",
            "type": "object",
            "properties": {
                "name": {
                    "title": "Name",
                    "description": "Name of column",
                    "type": "string"
                },
                "data_type": {
                    "description": "Datatype. One of: unknown, boolean, string, char, integer, int, float, double, timestamp, datetime, date, time",
                    "default": "unknown",
                    "allOf": [
                        {
                            "$ref": "#/definitions/ColumnTypes"
                        }
                    ]
                },
                "format_str": {
                    "title": "Format Str",
                    "description": "(Optional) String that describes the formatting of the value",
                    "type": "string"
                },
                "annotations": {
                    "title": "Annotations",
                    "description": "Column annotations from the MIT data profiling tool",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "metadata": {
                    "title": "Metadata",
                    "description": "(Optional) Unformatted metadata about the dataset",
                    "type": "object"
                },
                "grounding": {
                    "title": "Grounding",
                    "description": "(Optional) Grounding of ontological concepts related to the column",
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/Grounding"
                    }
                }
            },
            "required": [
                "name",
                "annotations"
            ]
        }
    }
}